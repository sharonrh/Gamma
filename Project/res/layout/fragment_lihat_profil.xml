                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/namaProfilTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Anda" />
					
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						
					</LinearLayout>
                    
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
                        android:id="@+id/tahunProfilTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Umur Anda" />
							
					</LinearLayout>
					
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
                        android:id="@+id/beratProfilSekarangTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berat Sekarang" />

					</LinearLayout>
					
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
                        android:id="@+id/beratProfilTargetTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berat Target" />

					</LinearLayout>
					
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
                        android:id="@+id/tinggiProfilTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tinggi Anda" />
							
					</LinearLayout>	

                </LinearLayout>

                <ImageView
                    android:id="@+id/fotoProfilTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="0.67"
                    android:src="@drawable/ic_launcher" />

            </TableRow>

        </TableLayout>

        <GridLayout
            android:layout_width="match_parent"
