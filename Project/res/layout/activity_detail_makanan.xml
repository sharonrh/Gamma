<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="5dp" >
            
            <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical" >
            
                 <ImageView
                     android:id="@+id/fotoDetailMakanan"
                     android:layout_width="120dp"
                     android:layout_height="120dp"
                     android:layout_weight="0.67"
                     android:background="@drawable/gamma" />

            </GridLayout>
            
            <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="3" >

                 <GridLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginRight="10dp"
                     android:layout_row="0"
                     android:background="@drawable/layer_card_background"
                     android:columnCount="1"
                     android:padding="10dp"
                     android:layout_marginBottom="5dp" >

                <TextView
                    android:id="@+id/namaDetailMakanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Makanan"
                    android:textSize="20dp"
                    android:textColor="@color/lumut"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kaloriDetailMakanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="1"
                    android:text="None kkal" />
            </GridLayout>
            
                 <GridLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_column="0"
                     android:layout_row="1"
                     android:background="@drawable/layer_card_background"
                     android:columnCount="1"
                     android:padding="5dp"
                     android:layout_marginBottom="5dp" >

            <ImageView
                android:id="@+id/bintang1Detail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="0"
                android:src="@drawable/achievement" />

            <ImageView
                android:id="@+id/bintang2Detail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_row="0"
                android:src="@drawable/achievement" />

            <ImageView
                android:id="@+id/bintang3Detail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_marginLeft="60dp"
                android:layout_row="0"
                android:src="@drawable/achievement" />

            <ImageView
                android:id="@+id/bintang4Detail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_marginLeft="90dp"
                android:layout_row="0"
                android:src="@drawable/achievement" />

            <ImageView
                android:id="@+id/bintang5Detail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_marginLeft="120dp"
                android:layout_row="0"
                android:src="@drawable/achievement" />
            
        </GridLayout>
        
                 <GridLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:layout_row="2"
                     android:layout_column="0"
                     android:columnCount="1" >
            
                     <Button
                android:id="@+id/rateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:text="Rate!" />
            </GridLayout>
            </GridLayout>
            
        </GridLayout>
        
        <GridLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_card_background"
      	android:descendantFocusability="afterDescendants"
        android:columnCount="1"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/makananKatalog"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_row="0"
            android:text="Karbohidrat" />

        

        <TextView
            android:id="@+id/karbohidrat"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:layout_row="0"
            android:text="x gr"
            android:textColor="@color/lumut" />

    </GridLayout>
    
        <GridLayout
