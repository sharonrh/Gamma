<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="10dp" >

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp" >

                <ImageView
                    android:id="@+id/fotoDetailMakanan"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/alpokat" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:rowCount="3" >

                <GridLayout
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="0"
                    android:background="@drawable/layer_card_background"
                    android:columnCount="1"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/namaDetailMakanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:singleLine="false"
                        android:text="Makanan"
                        android:textColor="@color/hijau_donker"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/kaloriDetailMakanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="None kkal" />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="1"
                    android:background="@drawable/layer_card_background"
                    android:columnCount="2"
                    android:padding="5dp" >

                    <RatingBar
                        android:id="@+id/ratingBarDetail"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:stepSize="0.5" />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="2"
                    android:columnCount="1" >

                    <Button
                        android:id="@+id/rateBtn"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/button_style"
                        android:text="Rate!" />
                </GridLayout>
            </GridLayout>
        </GridLayout>

        <GridLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_card_background"
            android:columnCount="1"
            android:descendantFocusability="afterDescendants"
            android:padding="5dp" >

            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="0"
                android:text="Karbohidrat" />

            <TextView
                android:id="@+id/karbohidrat"
                android:layout_column="0"
                android:layout_gravity="right|center_vertical"
                android:layout_row="0"
                android:text="x gr"
                android:textColor="@color/lumut" />
        </GridLayout>

        <GridLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_card_background"
            android:columnCount="1"
            android:descendantFocusability="afterDescendants"
            android:padding="5dp" >

            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="0"
                android:text="Protein" />

            <TextView
                android:id="@+id/protein"
                android:layout_column="0"
                android:layout_gravity="right|center_vertical"
                android:layout_row="0"
                android:text="x gr"
                android:textColor="@color/lumut" />
        </GridLayout>

        <GridLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_card_background"
            android:columnCount="1"
            android:descendantFocusability="afterDescendants"
            android:padding="5dp" >

            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="0"
                android:text="Lemak" />

            <TextView
                android:id="@+id/lemak"
                android:layout_column="0"
                android:layout_gravity="right|center_vertical"
                android:layout_row="0"
                android:text="x gr"
                android:textColor="@color/lumut" />
        </GridLayout>

        <GridLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_card_background"
            android:columnCount="1"
            android:descendantFocusability="afterDescendants"
            android:padding="5dp" >

            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="0"
                android:text="Sodium" />

            <TextView
                android:id="@+id/sodium"
                android:layout_column="0"
                android:layout_gravity="right|center_vertical"
                android:layout_row="0"
                android:text="x mg"
                android:textColor="@color/lumut" />
        </GridLayout>

        <GridLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_card_background"
            android:columnCount="1"
            android:descendantFocusability="afterDescendants"
            android:padding="5dp" >

            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="0"
                android:text="Jenis" />

            <TextView
                android:id="@+id/jenis"
                android:layout_column="0"
                android:layout_gravity="right|center_vertical"
                android:layout_row="0"
                android:text="None"
                android:textColor="@color/lumut" />
        </GridLayout>

        <GridLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_card_background"
            android:columnCount="1"
            android:descendantFocusability="afterDescendants"
            android:padding="5dp" >

            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="0"
                android:text="Berbahan Hewani" />

            <TextView
                android:id="@+id/hewani"
                android:layout_column="0"
                android:layout_gravity="right|center_vertical"
                android:layout_row="0"
                android:text="None"
                android:textColor="@color/lumut" />
        </GridLayout>

        <GridLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_card_background"
            android:columnCount="1"
            android:descendantFocusability="afterDescendants"
            android:padding="5dp" >

            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="0"
                android:text="Mengandung Kacang" />

            <TextView
                android:id="@+id/kacang"
                android:layout_column="0"
                android:layout_gravity="right|center_vertical"
                android:layout_row="0"
                android:text="None"
                android:textColor="@color/lumut" />
        </GridLayout>

        <GridLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_card_background"
            android:columnCount="1"
            android:descendantFocusability="afterDescendants"
            android:padding="5dp" >

            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="0"
                android:text="Berbahan Seafood" />

            <TextView
                android:id="@+id/seafood"
                android:layout_column="0"
                android:layout_gravity="right|center_vertical"
                android:layout_row="0"
                android:text="None"
                android:textColor="@color/lumut" />
        </GridLayout>
    </LinearLayout>

</ScrollView>