<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/voilet"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditProfilActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titleProfilView"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.67"
            android:text="@string/edit_profil"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_personal" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="top" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/editNama"
                            android:layout_width="109dp"
                            android:layout_height="20dp"
                            android:layout_gravity="top"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/style"
                            android:ems="10"
                            android:hint="@string/nama_anda"
                            android:inputType="textFilter"
                            android:paddingLeft="5dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/editUmur"
                            android:layout_width="109dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/style"
                            android:ems="10"
                            android:hint="@string/umur_anda"
                            android:inputType="numberDecimal"
                            android:paddingLeft="5dp"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textTahun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="@string/tahun" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/editBeratSekarang"
                            android:layout_width="109dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/style"
                            android:ems="10"
                            android:hint="@string/berat_sekarang"
                            android:inputType="numberDecimal"
                            android:paddingLeft="5dp"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textKg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="@string/kg" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/editBeratTarget"
                            android:layout_width="109dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/style"
                            android:ems="10"
                            android:hint="@string/berat_target"
                            android:inputType="numberDecimal"
                            android:paddingLeft="5dp"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textKg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kg" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/editTinggi"
                            android:layout_width="109dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/style"
                            android:ems="10"
                            android:hint="@string/tinggi_badan"
                            android:inputType="numberDecimal"
                            android:paddingLeft="5dp"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textCm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" cm" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/editFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.67"
                    android:background="@color/hijau_pencet"
                    android:src="@drawable/tambah_foto" />

            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.67"
            android:text="Jenis Kelamin" />

        <RadioGroup
            android:id="@+id/editGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/editPria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pria"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/editWanita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wanita"
                android:textSize="12dp" />
        </RadioGroup>
        
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:layout_marginBottom="10dp"
            android:columnCount="1" >

            <TextView
                android:id="@+id/textView2"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:layout_weight="0.67"
                android:text="@string/lama_diet" />

            <Spinner
                android:id="@+id/spinnerLamaDiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_marginLeft="100dp"
                android:layout_row="0"
                android:layout_weight="0.67"
                android:background="@drawable/spinner_normal_holo"
                android:prompt="@string/spinnerGayaHidup" />

        </GridLayout>

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:text="Data Tambahan (Opsional)" />

        <CheckBox
            android:id="@+id/editVegetarian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:text="Vegetarian" />

        <CheckBox
            android:id="@+id/editIkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:text="Alergi Makanan Laut" />

        <CheckBox
            android:id="@+id/editKacang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:text="Alergi Kacang-kacangan" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:columnCount="1" >

            <TextView
                android:id="@+id/textView2"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:layout_weight="0.67"
                android:text="Gaya Hidup" />

            <Spinner
                android:id="@+id/spinnerGayaHidup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_marginLeft="100dp"
                android:layout_row="0"
                android:layout_weight="0.67"
                android:background="@drawable/spinner_normal_holo"
                android:prompt="@string/spinnerGayaHidup" />
        </GridLayout>

        <TextView
            android:id="@+id/textPenjelasanGaya"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.67"
            android:background="@drawable/border"
            android:paddingTop="18dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp" >

            <Button
                android:id="@+id/simpanProfilBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_style"
                android:text="Simpan" />

            <Button
                android:id="@+id/batalProfilBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_style"
                android:text="Batal" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>