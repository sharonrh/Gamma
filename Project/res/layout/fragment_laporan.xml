<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu"
    android:orientation="vertical" >
       
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Edit Laporan"
        android:textSize="25sp"
        android:textStyle="bold" />
    
        <TextView
            android:id="@+id/tanggalHariSebelumnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Data Sebelumnya (X hari yang lalu):" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:layout_marginTop="20dp" >

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_row="0"
                    android:background="@drawable/layer_card_background"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/beratLaluIsiLaporan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="None kg" />

                    <TextView
                        android:id="@+id/tinggiLaluIsiLaporan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="None cm" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>

        

        <TextView
            android:id="@+id/tanggalHariIni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Data untuk tanggal X X X" />
        
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:columnCount="1" >

            <EditText
                android:id="@+id/tinggiIsiLaporan"
                android:layout_width="120dp"
                android:layout_column="0"
                android:layout_row="0"
                android:ems="10"
                android:hint="Tinggi Anda"
                android:inputType="numberDecimal" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_marginLeft="120dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="cm" />
            
            <EditText
                android:id="@+id/beratIsiLaporan"
                android:layout_width="120dp"
                android:layout_column="0"
                android:layout_row="0"
                android:ems="10"
                android:hint="Berat Anda"
                android:layout_marginLeft="170dp"
                android:inputType="numberDecimal" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_marginLeft="295dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="km" />
            
        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_style"
                android:text="Simpan"
                android:textSize="14dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_style"
                android:text="Batal"
                android:textSize="14dp" />

        </LinearLayout>
    
</LinearLayout>