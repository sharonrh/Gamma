<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
		    xmlns:tools="http://schemas.android.com/tools"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    tools:context="com.example.gamma.HalamanUtama$PlaceholderFragment">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="GaMMa"
                android:textSize="50sp" />

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:columnCount="3"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:id="@+id/profil"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_column="0"
                            android:layout_gravity="left"
                            android:layout_row="1"
                            android:background="#ffffff"
                            android:scaleType="centerInside"
                            android:src="@drawable/profil" />

                        <ImageButton
                            android:id="@+id/rekomendasi"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_column="1"
                            android:layout_gravity="left"
                            android:layout_row="1"
                            android:background="#ffffff"
                            android:scaleType="centerInside"
                            android:src="@drawable/rekomendasi" />

                        <ImageButton
                            android:id="@+id/statistik"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_column="0"
                            android:layout_gravity="left"
                            android:layout_row="2"
                            android:background="#ffffff"
                            android:scaleType="centerInside"
                            android:src="@drawable/statistik" />

                        <ImageButton
                            android:id="@+id/katalog"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_column="1"
                            android:layout_gravity="left"
                            android:layout_row="2"
                            android:scaleType="centerInside"
                            android:background="#ffffff"
                            android:src="@drawable/katalog" />

                        <ImageButton
                            android:id="@+id/achievement"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_column="0"
                            android:layout_gravity="left"
                            android:layout_row="3"
                            android:scaleType="centerInside"
                            android:background="#ffffff"
                            android:src="@drawable/achievement" />

                        <ImageButton
                            android:id="@+id/pengaturan"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_column="1"
                            android:layout_gravity="left"
                            android:layout_row="3"
                            android:scaleType="centerInside"
                            android:background="#ffffff"
                            android:src="@drawable/pengaturan" />
                    </GridLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        
</LinearLayout>

