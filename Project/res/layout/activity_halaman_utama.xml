<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HalamanUtamaActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="GaMMa"
            android:textSize="50sp" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:columnCount="3"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/profil"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_column="0"
                        android:layout_gravity="left"
                        android:layout_row="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/profile" />

                    <ImageButton
                        android:id="@+id/rekomendasi"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_column="1"
                        android:layout_gravity="left"
                        android:layout_row="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/food" />

                    <ImageButton
                        android:id="@+id/statistik"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_column="0"
                        android:layout_gravity="left"
                        android:layout_row="2"
                        android:scaleType="centerInside"
                        android:src="@drawable/graph" />

                    <ImageButton
                        android:id="@+id/katalog"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_column="1"
                        android:layout_gravity="left"
                        android:layout_row="2"
                        android:scaleType="centerInside"
                        android:src="@drawable/katalog" />

                    <ImageButton
                        android:id="@+id/achievement"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_column="0"
                        android:layout_gravity="left"
                        android:layout_row="3"
                        android:scaleType="centerInside"
                        android:src="@drawable/achivement" />

                    <ImageButton
                        android:id="@+id/pengaturan"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_column="1"
                        android:layout_gravity="left"
                        android:layout_row="3"
                        android:scaleType="centerInside"
                        android:src="@drawable/configuration" />
                </GridLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>