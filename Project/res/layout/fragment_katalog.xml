        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="2"
            android:layout_marginBottom="10dp" >

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_row="0"
                android:layout_marginBottom="10dp" >

                <GridLayout
                    android:id="@+id/makananPokok"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selector_card_background_makananpokok"
                    android:columnCount="1"
                    android:paddingBottom="5dp"
                    android:paddingRight="3dp"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_column="0"
                        android:layout_gravity="left|center_horizontal"
                        android:layout_row="0"
                        android:src="@drawable/ikon_pokok" />

                    <TextView
                        android:id="@+id/makananPokokKatalog"
                        android:layout_column="0"
                        android:layout_gravity="right|center_vertical"
                        android:layout_row="0"
                        android:text="None"
                        android:textColor="@color/Clouds"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </GridLayout>

                <GridLayout
                    android:id="@+id/sayur"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selector_card_background_sayur"
                    android:columnCount="1"
                    android:paddingBottom="5dp"
                    android:paddingRight="3dp"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_column="0"
                        android:layout_gravity="left|center_horizontal"
                        android:layout_row="0"
                        android:src="@drawable/ikon_sayur" />

                    <TextView
                        android:id="@+id/sayurKatalog"
                        android:layout_column="0"
                        android:layout_gravity="right|center_vertical"
                        android:layout_row="0"
                        android:text="None"
                        android:textColor="@color/Clouds"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </GridLayout>

                <GridLayout
                    android:id="@+id/buah"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/selector_card_background_buah"
                    android:columnCount="1"
                    android:paddingBottom="5dp"
                    android:paddingRight="3dp"
                    android:paddingTop="5dp" >

                    <ImageView
