<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp" >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:columnCount="2"
            android:padding="5dp" >

            <GridLayout
                android:columnCount="1"
                android:layout_gravity="left|top"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:rowCount="2"
                android:layout_marginRight="10dp" >

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:background="@drawable/layer_card_background"
                    android:columnCount="1"
                    android:layout_row="0"
                    android:padding="15dp"
                    android:layout_marginBottom="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Makanan Pokok"
                        android:textColor="@color/hijau_donker"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/makananPokokKatalog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_row="1"
                        android:text="None" />
                </GridLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_row="1"
                    android:background="@drawable/layer_card_background"
                    android:columnCount="1"
                    android:padding="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Lauk Pauk"
                        android:textColor="@color/hijau_donker"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/laukpaukKatalog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_row="1"
                        android:text="None" />
                </GridLayout>

            </GridLayout>

            <GridLayout
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:columnCount="1"
                android:rowCount="2" >

                <GridLayout
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="0"
                    android:rowCount="1"
                    android:columnCount="2"
                    android:layout_marginBottom="5dp" >
                    
                    <GridLayout
                		android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:layout_gravity="center_vertical"
                		android:layout_marginRight="5dp"
                		android:background="@drawable/layer_card_background"
                		android:columnCount="1"
                		android:padding="15dp"
                		android:layout_row="0"
                		android:layout_column="0" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Sayur"
                    android:textColor="@color/hijau_donker"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sayurKatalog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_row="1"
                    android:text="None" />
            </GridLayout>
            
                    <GridLayout
                		android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:layout_gravity="center_horizontal"
                		android:background="@drawable/layer_card_background"
                		android:columnCount="1"
                		android:padding="15dp"
                		android:layout_row="0"
                		android:layout_column="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Buah"
                    android:textColor="@color/hijau_donker"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buahKatalog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_row="1"
                    android:text="None" />
            </GridLayout>
                    
                </GridLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_row="1"
                    android:background="@drawable/layer_card_background"
                    android:padding="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Minuman"
                    android:textColor="@color/hijau_donker"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/minumanKatalog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_row="1"
                    android:text="None" />
            </GridLayout>
                
            </GridLayout>

        </GridLayout>

        <ListView
            android:id="@+id/listKatalog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4.90"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:dividerHeight="10dp"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:listSelector="@android:color/transparent" >

        </ListView>
    </LinearLayout>
</RelativeLayout>